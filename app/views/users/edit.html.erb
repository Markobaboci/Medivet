<h1>Edit Profile</h1>

<%= simple_form_for @user, url: user_path(@user), method: :patch do |f| %>
  <div class="form-group">
    <%= f.input :description, label: "Update your description", input_html: { placeholder: "Enter your description here..." } %>
  </div>

  <div class="form-group">
    <%= f.button :submit, "Update", class: "btn btn-primary" %>
  </div>
<% end %>
