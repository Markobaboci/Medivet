<h1>Edit Profile</h1>
<%= form_for @user do |f| %>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <!-- Include any additional fields you want the user to edit -->

  <div class="actions">
    <%= f.submit "Save Changes", class: 'btn btn-success' %>
  </div>
<% end %>
