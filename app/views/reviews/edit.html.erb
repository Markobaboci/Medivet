
<!-- Form to update a review -->
<%= simple_form_for [@booking, @review], url: booking_review_path(@booking), method: :patch, local: true do |form| %>
  <%= render 'form', form: form %> <!-- Assuming _form.html.erb handles the review fields and has a submit button -->

  <!-- Ghost Delete Button positioned to the right -->
  <div class="d-flex justify-content-between mt-3">
    <%= link_to "← Back", booking_path(@booking), class: "btn btn-outline-secondary" %>

    <%= button_to 'Delete Review', booking_review_path(@booking, @review), method: :delete, data: { confirm: 'Are you sure you want to delete this review?' }, class: "btn-ghost-primary" %>
  </div>
<% end %>
