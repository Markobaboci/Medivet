<div class="vet-card card shadow-sm border-0 p-3 h-100">
  <!-- Full Width Top Section with Green Background -->
  <div class="vet-card-header text-center p-4">
    <div class="vet-image mb-3">
      <% if clinic.image.attached? %>
        <%= cl_image_tag clinic.image.key, alt: 'Vet Image', class: 'img-fluid vet-profile-img' %>
      <% else %>
        <%= image_tag 'clinic.png', alt: 'Vet Image', class: 'img-fluid vet-profile-img' %>
      <% end %>
    </div>
    <h5 class="card-title text-white"><strong><%= clinic.clinic_name.capitalize %></strong></h5>
  </div>

  <!-- Wide Book Appointment Button -->
  <div class="text-center">
    <%= link_to 'Book an Appointment', '#', class: 'btn btn-success btn-lg w-75 mt-3' %>
  </div>

  <!-- Rating Section -->
  <div class="rating d-flex justify-content-center mt-4">
    <% 5.times do |i| %>
      <% if i < clinic.average_rating.to_i %>
        <i class="fas fa-star text-warning"></i>
      <% else %>
        <i class="far fa-star text-warning"></i>
      <% end %>
    <% end %>
  </div>

  <!-- Information Section -->
  <div class="info-box w-100 text-center mt-4">
    <div class="d-flex justify-content-center align-items-center mb-2">
      <i class="fas fa-map-marker-alt text-success me-2"></i>
      <span class="text-muted"><%= clinic.address %></span>
    </div>
    <div class="d-flex justify-content-center align-items-center">
      <i class="fas fa-paw text-success me-2"></i>
      <span class="text-muted"><%= clinic.species.map { |species| species.split('/').map { |s| s.split.map(&:capitalize).join(' ') }.join('/').pluralize }.join(", ") %></span>
    </div>
  </div>

  <!-- View Profile Button -->
  <div class="text-center mt-3">
    <%= link_to 'View Profile', clinic_path(clinic), class: 'btn btn-outline-success btn-sm' %>
  </div>
</div>
