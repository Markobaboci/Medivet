<div class="container">
  <div class="row">
    <div class="col-12 d-flex align-items-flex-start justify-content-space-between">
      <%= form_with url: root_path, method: :get, local: true do %>
          <div class="input-group mt-4 gap-3">
            <!-- Species Filter -->
            <div>
                <%= select_tag :species,
                      options_for_select(['All'] + Clinic.pluck(:species).flatten.uniq, params[:species]),
                      prompt: "Select Species",
                      class: "form-control form-select",
                      multiple: true %>
            </div>

            <!-- Care Type Filter -->
            <div>
                <%= select_tag :care_type,
                      options_for_select(['All'] + Clinic.pluck(:care_type).flatten.uniq, params[:care_type]),
                      prompt: "Select Care Type",
                      class: "form-control form-select",
                      multiple: true %>
            </div>

            <!-- Submit Button -->
            <div>
                <%= submit_tag "Filter", class: "btn btn-primary filter-submit" %>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>
