<h1>Button Style Showcase</h1>

<!-- Primary and Accent Buttons -->
<div class="button-container">
  <h2>Primary Buttons</h2>
  <button class="btn btn-primary">Primary (btn-primary)</button>
  <button class="btn btn-secondary">Secondary (btn-secondary)</button>
  <button class="btn btn-accent">Accent (btn-accent)</button>
</div>

<!-- Status Buttons -->
<div class="button-container">
  <h2>Status Buttons</h2>
  <button class="btn btn-success">Success (btn-success)</button>
  <button class="btn btn-info">Info (btn-info)</button>
  <button class="btn btn-danger">Danger (btn-danger)</button>
  <button class="btn btn-warning">Warning (btn-warning)</button>
</div>

<!-- Outlined Buttons -->
<div class="button-container">
  <h2>Outlined Buttons </h2>
  <button class="btn btn-outline-primary">Outlined Primary (btn-outline-primary)</button>
  <button class="btn btn-outline-secondary">Outlined Secondary (btn-outline-secondary)</button>
</div>

<!-- Ghost Buttons -->
<div class="button-container">
  <h2>Ghost Buttons</h2>
  <button class="btn btn-ghost-primary">Ghost Primary (btn-ghost-primary)</button>
  <button class="btn btn-ghost-secondary">Ghost Secondary (btn-ghost-secondary)</button>
</div>

<!-- Special Buttons -->
<div class="button-container">
  <h2>Special Buttons</h2>
  <button class="btn btn-rounded">Rounded (btn-rounded)</button>
  <button class="btn btn-icon"><i class="fa fa-paw"></i> Icon Button (btn-icon)</button>
</div>

<!-- Custom Style Buttons -->
<div class="button-container">
  <h2>Custom Styles</h2>
  <button class="btn btn-on-primary">On Primary (btn-on-primary)</button>
  <button class="btn btn-on-secondary">On Secondary (btn-on-secondary)</button>
</div>
