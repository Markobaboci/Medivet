<h1>All Bookings</h1>

<% if @bookings.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Date</th>
        <th>Time</th>
        <th>Description</th>
        <th>Clinic</th>
        <th>Pet</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @bookings.each do |booking| %>
        <tr>
          <td><%= booking.date %></td>
          <td><%= booking.time.strftime("%I:%M %p") %></td>
          <td><%= booking.description %></td>
          <td><%= booking.clinic.email if booking.clinic %></td>
          <td><%= booking.pet.name if booking.pet %></td>
          <td>
            <%= link_to "Show", booking_path(booking), class: "btn btn-primary btn-sm" %>
            <%= link_to "Edit", edit_booking_path(booking), class: "btn btn-secondary btn-sm" %>
            <%= link_to "Delete", booking_path(booking), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No bookings available.</p>
<% end %>
