<%# <%= render 'form' %>

<div class="container mt-4">
  <h1 class="text-center mb-4">New Appointment 📅</h1>
<%= form_with model: [@clinic, @booking], local: true, data: { turbo: false }, class: "p-4 border rounded shadow-sm bg-light" do |f| %>
    <div class="form-group mb-3">
      <%= f.label :pet, "🐾 Pet ", class: "form-label" %>
      <%= f.select :pet_id, current_user.pets.map { |pet| [pet.name, pet.id] }, include_blank: true, class: "form-select" %>
    </div>
 <div class="form-group mb-3">
      <%= f.label :date, class: "form-label" %>
      <%= f.date_field :date, class: "form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= f.label :time, class: "form-label" %>
      <%= f.time_field :time, class: "form-control" %>
    </div>

    <div class="form-group mb-4">
      <%= f.label :description, class: "form-label" %>
      <%= f.text_area :description, class: "form-control", rows: 4 %>
    </div>

    <div class="d-grid">
      <%= f.submit "Confirm Booking", class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>

  <div class="d-flex justify-content-start text-center mt-3">
    <%= link_to '← Back', clinic_path(@clinic), class: "btn btn-outline-secondary" %>
  </div>
</div>

