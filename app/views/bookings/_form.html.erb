<div class="card shadow-sm p-4 mb-4">
  <div class="card-body">
    <h4 class="card-title mb-4"><%= @booking.persisted? ? "Update Your Appointment Details" : "Schedule Your Doctor's Appointment" %></h4>

    <%= simple_form_for @booking, local: true do |form| %>

      <!-- Pet Selection -->
      <div class="mb-3">
        <%= form.input :pet_id, collection: current_user.pets.map { |pet| [pet.name, pet.id] },
                        label: "Select Your Pet",
                        include_blank: "Choose a pet",
                        input_html: { class: "form-control" } %>
      </div>

<!-- Species Selection -->
<div class="mb-3">
<%= form.input :species,
               collection: Booking.pluck(:species).uniq,
               label: "Pet Species",
               include_blank: "Select species",
               input_html: { class: "form-control" } %>
</div>

<!-- Care Type Selection -->
<div class="mb-3">
  <%= form.input :care_type,
               collection: Booking.pluck(:care_type).uniq,
               label: "Care Type",
               include_blank: "Select care type",
               input_html: { class: "form-control" } %>
</div>
      <!-- Booking Date -->
      <div class="mb-3">
        <%= form.input :date, as: :date,
                        label: "Booking Date",
                        input_html: { class: "form-control" } %>
      </div>

      <!-- Booking Time -->
      <div class="mb-3">
        <%= form.input :time, as: :time,
                        label: "Booking Time",
                        input_html: { class: "form-control" } %>
      </div>

      <!-- Booking Description -->
      <div class="mb-3">
        <%= form.input :description, as: :text,
                        label: "Description",
                        input_html: { class: "form-control", rows: 5, style: "resize: vertical;" } %>
      </div>

      <!-- Personal Information -->
      <fieldset>
        <legend class="h5 mb-3">Your Information</legend>

        <div class="mb-3">
          <%= form.input :first_name, as: :string,
                          label: "First Name",
                          input_html: {
                            class: "form-control",
                            value: current_user.first_name || "",
                            placeholder: "Enter your first name"
                          } %>
        </div>

        <div class="mb-3">
          <%= form.input :last_name, as: :string,
                          label: "Last Name",
                          input_html: {
                            class: "form-control",
                            value: current_user.last_name || "",
                            placeholder: "Enter your last name"
                          } %>
        </div>
      </fieldset>

      <!-- Submit Button -->
      <div class="mt-3">
        <%= form.button :submit, @booking.persisted? ? "Update Booking" : "Confirm Booking",
                        class: "btn btn-primary w-100" %>
      </div>

    <% end %>
  </div>
</div>
