<%= simple_form_for [@user, @clinic] do |f| %>
<!-- Clinic Name -->
  <%= f.input :clinic_name, as: :string, label: "Clinic Name", input_html: { class: "form-control", placeholder: "Enter clinic name" } %>
  <%= f.input :address %>
  <%= f.input :phone_numer %>
  <%= f.input :email %>

  <!-- Multi-select for Care Type -->
  <%= f.input :care_type,
              as: :select,
              collection: Clinic.pluck(:care_type).flatten.uniq,
              input_html: { multiple: true, class: "form-control" } %>

  <!-- Multi-select for Species -->
  <%= f.input :species,
              as: :select,
              collection: Clinic.pluck(:species).flatten.uniq,
              input_html: { multiple: true, class: "form-control" } %>

  <%= f.input :rate %>
  <%= f.input :webpage %>
  <%= f.input :description %>
  <%= f.input :image, as: :file %>
  <%= f.submit @clinic.persisted? ? 'Update Clinic' : 'Add Clinic',
    data: { confirm: @clinic.persisted? ? "Are you sure you want to update this clinic?" : "Are you sure you want to add this clinic?" }, class: "btn btn-primary" %>
<% end %>
